@model List<Service>
@{
	ViewData["Title"] = "Service page";
}
<div class="content-wrapper">
	<div class="row">
	</div>
	<div class="col-lg-12 grid-margin stretch-card">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Service </h4>

				<div class="table-responsive">
					<a class="btn btn-primary" asp-action="Create">Create</a>
					<table class="table">
						<thead>
							<tr>

								<th>Image</th>
								<th>Name</th>
								
								<th>Actions</th>

							</tr>
						</thead>
						<tbody>
							@foreach (var serviceItem in Model)
							{

								<tr>
									<td>
										<img src="~/Assets/images/website-images/@serviceItem.Image">
									</td>
									<td>@serviceItem.Name</td>
									<td>
										<a class="btn btn-success" asp-action="Detail" asp-route-id="@serviceItem.Id">Detail</a>
										<a class="btn btn-warning" asp-action="Update" asp-route-id=@serviceItem.Id>Update</a>
										@if (ViewBag.Count == 1)
										{

											<a class="btn btn-danger disabled" asp-action="Delete" asp-route-id=@serviceItem.Id>Delete</a>
										}
										else
										{
											<a class="btn btn-danger " asp-action="Delete" asp-route-id=@serviceItem.Id>Delete</a>

										}

									</td>

								</tr>
							}

						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>

</div>
</div>

